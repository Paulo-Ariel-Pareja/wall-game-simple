# ============================================
# CONFIGURACIÓN DEL SERVIDOR
# ============================================

# Puerto en el que el servidor escuchará las conexiones
# Valor por defecto: 3000
PORT=3000

# Entorno de ejecución (development, production, test)
# Valor por defecto: development
NODE_ENV=development

# ============================================
# CONFIGURACIÓN DEL JUEGO
# ============================================

# Duración del período de selección en segundos
# Durante este tiempo, los jugadores eligen su altura de salto (1-10)
# Rango recomendado: 10-30 segundos
SELECTION_DURATION=15

# Duración del período de revelación en segundos
# Durante este tiempo, se muestra la pared con el hueco y los resultados
# Rango recomendado: 3-10 segundos
REVEAL_DURATION=5

# Número máximo de salas simultáneas permitidas
# Ajustar según la capacidad del servidor
MAX_ROOMS=100

# Número máximo de jugadores permitidos por sala
# Rango recomendado: 2-20 jugadores
MAX_PLAYERS_PER_ROOM=10

# Tiempo de inactividad antes de eliminar una sala (en milisegundos)
# 1800000 ms = 30 minutos
# 3600000 ms = 60 minutos
ROOM_TIMEOUT=1800000
